@* <h3>IsvatcurrentBusinessRiskPage</h3> *@
@using MUCOBADI.Models
@inject IToastService toastService;

@if (DataSource != null && DataSource.Count > 0)
{
    <SfGrid @ref=@HeaderGrid TValue="IsvatcurrentBusinessRisk" DataSource="@DataSource"
            AllowFiltering=false AllowGrouping=false AllowPaging=false AllowTextWrap=true ShowColumnChooser=true
            GridLines="GridLine.Both" AllowSelection="true" Toolbar="@(new string[] {"Edit","Update","Cancel","ColumnChooser" })"
            EnableStickyHeader=true ClipMode="ClipMode.EllipsisWithTooltip" EnableAltRow=true>
        <GridGroupSettings Columns="@Initial"></GridGroupSettings>
        <GridSelectionSettings Mode="Syncfusion.Blazor.Grids.SelectionMode.Cell" Type="Syncfusion.Blazor.Grids.SelectionType.Single"></GridSelectionSettings>
        <GridSearchSettings IgnoreCase="true"></GridSearchSettings>
        <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Excel"></GridFilterSettings>
        <GridPageSettings PageSize="20"></GridPageSettings>
        <GridEvents CellSaved="DetailedCellSavedHandler" CellSelected="DetailedCellSelectHandler" TValue="IsvatcurrentBusinessRisk"></GridEvents>
        <GridEditSettings AllowAdding="false" AllowDeleting="false" AllowEditing="true" Mode="@EditMode.Batch" ShowConfirmDialog=false></GridEditSettings>
        <GridColumns>
            <GridColumn Field="@(nameof(IsvatcurrentBusinessRisk.IsvatcurrentBusinessRiskId))" HeaderText="Id" Visible=false Width="120" IsPrimaryKey=true IsIdentity=true></GridColumn>
            <GridForeignColumn Field="@(nameof(IsvatcurrentBusinessRisk.CurrenBusinessRiskId))" HeaderText="RISKS " Width="130" AllowEditing=false ForeignKeyField="@(nameof(ACurrenBusinessRisk.CurrenBusinessRiskId))" ForeignKeyValue="@(nameof(ACurrenBusinessRisk.CurrenBusinessRiskDesc))" ForeignDataSource="@CurrenBusinessRiskData"></GridForeignColumn>
            <GridColumn Field=@nameof(IsvatcurrentBusinessRisk.OtherCurrenBusinessRisk) Visible="true" AllowFiltering="true" HeaderText="OTHER RISKS" TextAlign="Syncfusion.Blazor.Grids.TextAlign.Left" Width="140"></GridColumn>
            <GridForeignColumn Field="@(nameof(IsvatcurrentBusinessRisk.RiskLevelRatingId))" HeaderText="Risk level rating" Width="130" ForeignKeyField="@(nameof(ARiskLevelRating.RiskLevelRatingId))" ForeignKeyValue="@(nameof(ARiskLevelRating.RiskLevelRatingDesc))" ForeignDataSource="@RiskLevelRatingData"></GridForeignColumn>
        </GridColumns>
    </SfGrid>
}
else
{
    <MudAlert Severity="Severity.Error" Elevation="2" Style="padding:5px;">There are no records to display</MudAlert>
}

@code {
    [Parameter]
    public List<ACurrenBusinessRisk>? CurrenBusinessRiskData { get; set; }
    [Parameter]
    public List<ARiskLevelRating>? RiskLevelRatingData { get; set; }
    [Parameter]
    public List<IsvatcurrentBusinessRisk>? IsvatcurrentBusinessRiskData { get; set; }
    [Parameter]
    public int IsvatheaderId { get; set; }
    [Parameter]
    public EventCallback<List<IsvatcurrentBusinessRisk>?> DetailToggle { get; set; }

    public string[] Initial = (new string[] { "RiskLevelRatingIdCategory", "RiskLevelRatingIdClassification" });

    List<IsvatcurrentBusinessRisk>? DataSource { get; set; }
    int? PreviousIsvatheaderId { get; set; }
    public SfGrid<IsvatcurrentBusinessRisk>? HeaderGrid;

    protected override void OnInitialized()
    {
        try
        {
            if (PreviousIsvatheaderId != IsvatheaderId)
            {

                if (IsvatcurrentBusinessRiskData != null && IsvatcurrentBusinessRiskData.Count > 0)
                {
                    if (CurrenBusinessRiskData != null && CurrenBusinessRiskData.Count > 0)
                    {
                        DataSource = new List<IsvatcurrentBusinessRisk>();
                        int CountId = -1;
                        foreach (var item in CurrenBusinessRiskData)
                        {
                            var exists = IsvatcurrentBusinessRiskData.FirstOrDefault(o => o.CurrenBusinessRiskId == item.CurrenBusinessRiskId);
                            if (exists != null)
                            {
                                DataSource.Add(new IsvatcurrentBusinessRisk()
                                    {
                                        IsvatcurrentBusinessRiskId = exists.IsvatcurrentBusinessRiskId,
                                        IsvatheaderId = exists.IsvatheaderId,
                                        CurrenBusinessRiskId = item.CurrenBusinessRiskId,
                                        OtherCurrenBusinessRisk = exists.OtherCurrenBusinessRisk,
                                        RiskLevelRatingId = exists.RiskLevelRatingId,
                                    });
                            }
                            else
                            {
                                DataSource.Add(new IsvatcurrentBusinessRisk()
                                    {
                                        IsvatcurrentBusinessRiskId = CountId,
                                        IsvatheaderId = IsvatheaderId,
                                        CurrenBusinessRiskId = item.CurrenBusinessRiskId,
                                    });
                            }
                            CountId--;
                        }
                    }
                }
                else
                {
                    if (CurrenBusinessRiskData != null && CurrenBusinessRiskData.Count > 0)
                    {
                        DataSource = new List<IsvatcurrentBusinessRisk>();
                        int CountId = -1;
                        foreach (var item in CurrenBusinessRiskData)
                        {
                            DataSource.Add(new IsvatcurrentBusinessRisk()
                                {
                                    IsvatcurrentBusinessRiskId = CountId,
                                    IsvatheaderId = IsvatheaderId,
                                    CurrenBusinessRiskId = item.CurrenBusinessRiskId,
                                });
                            CountId--;
                        }
                    }
                }
                PreviousIsvatheaderId = IsvatheaderId;
            }
        }
        catch (Exception ex)
        {

            //  throw;
        }
        base.OnInitialized();
    }

    private async Task DetailedCellSavedHandler(CellSaveArgs<IsvatcurrentBusinessRisk> args)
    {
        try
        {
            if (HeaderGrid != null)
            {
                var index = await HeaderGrid.GetRowIndexByPrimaryKeyAsync(args.RowData.IsvatcurrentBusinessRiskId);
                //await HeaderGrid.UpdateCellAsync(index, nameof(IsvatcurrentBusinessRisk.ComplaintId), ComplaintId);
            }

        }
        catch (Exception ex)
        {
            toastService.ClearAll(); toastService.ShowError(ex.Message);
        }
        finally
        {
            if (HeaderGrid != null)
            {
                await HeaderGrid.EndEditAsync();
            }
            if (DataSource != null)
            {
                await DetailToggle.InvokeAsync(DataSource);
            }
        }
    }
    private async Task DetailedCellSelectHandler(CellSelectEventArgs<IsvatcurrentBusinessRisk> args)
    {
        if (HeaderGrid != null)
        {
            //get selected cell index
            var CellIndexes = await HeaderGrid.GetSelectedRowCellIndexesAsync();

            //get the row and cell index
            var CurrentEditRowIndex = CellIndexes[0].Item1;
            var CurrentEditCellIndex = (int)CellIndexes[0].Item2;

            //get the available fields
            var fields = await HeaderGrid.GetColumnFieldNamesAsync();
            // edit the selected cell using the cell index and column name
            await HeaderGrid.EditCellAsync(CurrentEditRowIndex, fields[CurrentEditCellIndex]);
        }

    }
}






