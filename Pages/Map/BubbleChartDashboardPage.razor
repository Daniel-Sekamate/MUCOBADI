@page "/bubbleChart"
@using Syncfusion.Blazor.Charts
<div class="row">
    <div class="col-md-8">
        <div class="control-section" align='center'>
            <div class="control-section">
                <SfChart Title="Analysis of Market Opportunities for [Electronic Product]: Size, Profitability, and Investment Attractiveness">
                    <ChartPrimaryXAxis Title="Market Size" LabelPlacement="LabelPlacement.OnTicks" EdgeLabelPlacement="EdgeLabelPlacement.Shift" ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
                        <ChartAxisLabelStyle Size="10px" FontWeight="600" />
                    </ChartPrimaryXAxis>
                    <ChartPrimaryYAxis Title="Potential Profitability">
                        <ChartAxisLabelStyle Size="10px" FontWeight="600" />
                    </ChartPrimaryYAxis>
                    <ChartSeriesCollection>
                        <ChartSeries DataSource="@SalesReports" XName="X" YName="Y" Type="ChartSeriesType.Bubble" Size="Size" Name="Text">
                        </ChartSeries>
                    </ChartSeriesCollection>
                </SfChart>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="control-section" align='center'>
            <div class="control-section">
            </div>
        </div>
    </div>
</div>


