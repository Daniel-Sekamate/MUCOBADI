    <GridColumns>
        <GridColumn Type="ColumnType.CheckBox" Width="50"></GridColumn>
        <GridColumn Field=@nameof(ASourceDocument.SourceDocumentId) HeaderText=" Id" TextAlign="TextAlign.Left" IsPrimaryKey="true" IsIdentity="true" Visible="false" Width="100"></GridColumn>
        <GridColumn Field=@nameof(ASourceDocument.SourceDocumentDescription) HeaderText="Source Document Description"></GridColumn>





    </GridColumns>
</SfGrid>

