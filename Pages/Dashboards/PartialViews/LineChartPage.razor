@*@page "/testline"*@
@using MUCOBADI.DTOs.Dashboard;
@using Syncfusion.Blazor.Charts

<SfChart Palettes="@palettes">
    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category">
    </ChartPrimaryXAxis>
    <ChartPrimaryYAxis Title="@verticalAxis">
        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
    </ChartPrimaryYAxis>
    <ChartSeriesCollection>
        <ChartSeries DataSource="@GroupedColumnModelData" Name="<1 Yr" XName="DistrictDescription" YName="LessThanOne" Type="ChartSeriesType.Line">
            <ChartMarker>
                <ChartDataLabel Visible="true" Format="N1">
                    <ChartDataLabelFont Color="#2ecc71" FontWeight="600"></ChartDataLabelFont>
                </ChartDataLabel>
             
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@GroupedColumnModelData" Name="1-4 Yrs" XName="DistrictDescription" YName="OnetoFour" Type="ChartSeriesType.Line">
            <ChartMarker>
                <ChartDataLabel Visible="true" Format="N1">
                    <ChartDataLabelFont Color="#c0392b" FontWeight="600"></ChartDataLabelFont>
                </ChartDataLabel>
                
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@GroupedColumnModelData" Name="5-9 Yrs" XName="DistrictDescription" YName="FivetoNine" Type="ChartSeriesType.Line">
            <ChartMarker>
                <ChartDataLabel Visible="true" Format="N1">
                    <ChartDataLabelFont Color="#2f3542" FontWeight="600"></ChartDataLabelFont>
                </ChartDataLabel>
               
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@GroupedColumnModelData" Name="10-14 Yrs" XName="DistrictDescription" YName="TentoFourteen" Type="ChartSeriesType.Line">
            <ChartMarker>
                <ChartDataLabel Visible="true" Format="N1">
                    <ChartDataLabelFont Color="#fbc531" FontWeight="600"></ChartDataLabelFont>
                </ChartDataLabel> 
              
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@GroupedColumnModelData" Name="15-17 Yrs" XName="DistrictDescription" YName="FifteentoSeventeen" Type="ChartSeriesType.Line">
            <ChartMarker>
                <ChartDataLabel Visible="true" Format="N1">
                    <ChartDataLabelFont Color="#0097e6" FontWeight="600"></ChartDataLabelFont>
                </ChartDataLabel>
               
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@GroupedColumnModelData" Name="18+ Yrs" XName="DistrictDescription" YName="EigteenPlus" Type="ChartSeriesType.Line">
            <ChartMarker>
                <ChartDataLabel Visible="true" Format="N1">
                    <ChartDataLabelFont Color="#6c5ce7" FontWeight="600"></ChartDataLabelFont>
                </ChartDataLabel>
              
            </ChartMarker>
        </ChartSeries>
    </ChartSeriesCollection>

    <ChartLegendSettings Visible="true" />
</SfChart>

