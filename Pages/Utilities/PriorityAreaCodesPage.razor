                            <SfTextBox Multiline="true" ID="PriorityAreaCodeDesc" @bind-Value="@(PriorityAreaCodesData.PriorityAreaCodeDesc)" Placeholder="Priority Area Code" FloatLabelType="FloatLabelType.Always"></SfTextBox>
