@using MUCOBADI.DTOs.Dashboard;
@using Syncfusion.Blazor.Charts

<SfChart>
    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category"></ChartPrimaryXAxis>
    <ChartSeriesCollection>
        <ChartSeries DataSource="@MixedChartModelData" Name="Female" XName="Description" Width="2" Opacity="1" YName="Female" Type="ChartSeriesType.Column">
            <ChartMarker>
                <ChartDataLabel Visible="true">
                    <ChartDataLabelFont Color="#222f3e" FontWeight="200"></ChartDataLabelFont>
                </ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@MixedChartModelData" Name="Male" XName="Description" Width="2" Opacity="1" YName="Male" Type="ChartSeriesType.Column">
            <ChartMarker>
                <ChartDataLabel Visible="true">
                    <ChartDataLabelFont Color="#222f3e" FontWeight="200"></ChartDataLabelFont>
                </ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
        <ChartSeries DataSource="@MixedChartModelData" Name="Overall" XName="Description" Width="2" Opacity="1" YName="Overall" Type="ChartSeriesType.Column">
            <ChartMarker>
                <ChartDataLabel Visible="true">
                    <ChartDataLabelFont Color="#222f3e" FontWeight="200"></ChartDataLabelFont>
                </ChartDataLabel>
            </ChartMarker>
        </ChartSeries>
    </ChartSeriesCollection>
</SfChart>

