@*@page "/groupedPage"*@
@using MUCOBADI.DTOs.Dashboard;
@using Syncfusion.Blazor.Charts

@if (GroupedColumnModelData != null && GroupedColumnModelData.Count > 0)
{
<div class="col-md-12">
    <SfChart  Width="@Width">
        <ChartPrimaryXAxis ValueType="@Syncfusion.Blazor.Charts.ValueType.Category" Interval="1">
            <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
        </ChartPrimaryXAxis>
        <ChartArea>
            <ChartAreaBorder Width="0"></ChartAreaBorder>
        </ChartArea>
        <ChartPrimaryYAxis Title="@verticalAxis">
            <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
            <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
        </ChartPrimaryYAxis>
        <ChartSeriesCollection>
            <ChartSeries DataSource="@GroupedColumnModelData" XName="DistrictDescription" YName="LessThanOne" Name="<1 Yr" GroupName="One" ColumnWidth="0.7" ColumnSpacing="0.1" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Top">
                        <ChartDataLabelFont Color="#ffffff" FontWeight="600"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
            <ChartSeries DataSource="@GroupedColumnModelData" XName="DistrictDescription" YName="OnetoFour" Name="1-4 Yrs" GroupName="Four" ColumnWidth="0.5" ColumnSpacing="0.1" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Top">
                        <ChartDataLabelFont Color="#ffffff" FontWeight="600"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
            <ChartSeries DataSource="@GroupedColumnModelData" XName="DistrictDescription" YName="FivetoNine" Name="5-9 Yrs" GroupName="Nine" ColumnWidth="0.7" ColumnSpacing="0.1" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Top">
                        <ChartDataLabelFont Color="#ffffff" FontWeight="600"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
            <ChartSeries DataSource="@GroupedColumnModelData" XName="DistrictDescription" YName="TentoFourteen" Name="10-14 Yrs" GroupName="Fourteen" ColumnWidth="0.5" ColumnSpacing="0.1" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Top">
                        <ChartDataLabelFont Color="#ffffff" FontWeight="600"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
            <ChartSeries DataSource="@GroupedColumnModelData" XName="DistrictDescription" YName="FifteentoSeventeen" Name="15-17 Yrs" GroupName="Seventeen" ColumnWidth="0.7" ColumnSpacing="0.1" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Top">
                        <ChartDataLabelFont Color="#ffffff" FontWeight="600"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
            <ChartSeries DataSource="@GroupedColumnModelData" XName="DistrictDescription" YName="EigteenPlus" Name="18+ Yrs" GroupName="Eigteen" ColumnWidth="0.5" ColumnSpacing="0.1" Type="ChartSeriesType.Column">
                <ChartMarker>
                    <ChartDataLabel Visible="true" Position="Syncfusion.Blazor.Charts.LabelPosition.Top">
                        <ChartDataLabelFont Color="#ffffff" FontWeight="600"></ChartDataLabelFont>
                    </ChartDataLabel>
                </ChartMarker>
            </ChartSeries>
        </ChartSeriesCollection>
        <ChartLegendSettings Visible="true"></ChartLegendSettings>
        <ChartTooltipSettings Enable="true"></ChartTooltipSettings>
    </SfChart>
</div>
}
@code
{
    //Palettes="@palettes"
    [Parameter]
    public string verticalAxis { get; set; }
    [Parameter]
    public List<GroupedColumnModel> GroupedColumnModelData { get; set; }
    public String[] palettes = new String[] { "#ffb142", "#227093", "#2C3A47", "#CAD3C8", "#fbc531", "#4cd137" };
    public string Width { get; set; } = "90%";
   
   
   
}